<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_button_text"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:padding="@dimen/padding_small"
        android:layout_marginStart="@dimen/category_button_margin_start"
        android:paddingBottom="@dimen/zero"
        android:clickable="false"
        android:text="Category"
        android:layout_marginLeft="@dimen/category_button_margin"
        android:layout_marginTop="@dimen/category_button_margin"
        android:layout_marginBottom="@dimen/category_button_margin"
        android:layout_marginEnd="@dimen/category_button_margin" />
</FrameLayout>